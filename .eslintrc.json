{
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "node": true,
    "jasmine": true,
    "commonjs": true,
    "protractor": true
  },
  "rules": {
    // warnings
    "comma-dangle": 1,
    "no-unused-vars": 1,
    "no-useless-constructor": 1,
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": false
      }
    ],
    "semi": 1,
    "no-extra-semi": 1,
    //errors
    "object-shorthand": [
      2,
      "never"
    ],
    "no-eq-null": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-new-symbol": 2,
    "no-this-before-super": 2,
    "no-undef": 2,
    "no-delete-var": 2
  }
}